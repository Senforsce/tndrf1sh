    </details>
    </section>
}

t1 HTMX(c *router.Context, list []UserBooking) {
    <div class="serviceview">
        <div>
            <h5>Cours Collectifs</h5>
            <div>
                <img src="/static/img/cours-collectifs.svg" width="25%" alt="" />
            </div>

            <div>
                <h6>Abonnés</h6>
                @userlist.HTMX([]userlist.TndrSimpleUser{},c)
            </div>

            <div>
                <h6>Utilisateurs Uniques</h6>
                @userlist.HTMX([]userlist.TndrSimpleUser{},c)
            </div>


            <div>
                <h6>Demandes de Coaching</h6>
                <ul>
                for _, elem := range(list) {
                    <li style="list-style-type:none;">
                        <div data-subject={elem.Subject} style="display:flex;gap:1rem;">
                            <p>{elem.BelongsToUser}</p>
                            <p>{elem.BookingType}</p>
                            <p>{elem.BookingRequestDate}</p>
                            <p>{elem.BookingComment}</p>
                        </div>
                    
                    </li>
                }
                </ul>
            </div>


        </div>
    </div>
}