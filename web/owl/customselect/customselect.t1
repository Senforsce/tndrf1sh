<style>
select, ::picker(select) {
  appearance: base-select;
  font: -webkit-small-control;
}

.option-container {
  display: grid;
  grid-template: 1fr 1fr / 1fr 1fr 1fr;
  gap: 1rem;
}

::picker(select) {
  padding: 1rem;
  border-radius: 2rem;
  border-width: 0;
  margin-top: 0.5rem;
  box-shadow: 0px 12.8px 28.8px rgba(0, 0, 0, 0.13), 0px 0px 9.2px rgba(0, 0, 0, 0.11);
}

selectedcontent {
  & img {
    display: none;
  }
}

option {
  display: grid;
  
  &::checkmark {
    display: none;
  }

  &:hover {
    background: none;

    & img {
      border-color: dimgray;
      cursor: pointer;
    }
  }

  &[hidden] {
    display: none;
  }
}

img {
  width: 100%;
  max-width: 120px;
  border-radius: 1rem;
  border: 1px solid lightgray;
  margin-bottom: 0.25rem;
}

.header {
  font-weight: 700;
  display: inline-block;
  width: 100%;
}

/* Button */
select {
  text-align: left;
  padding: 1rem 2rem;
  border-radius: 2rem;
  width: 300px;
  background: #eee;
  border-width: 0;
  transition-duration: 0.25s;
  background-color: white;
  
  button {
    
  }

  &:hover {
    background-color: #ddd;
  }
}

/* ðŸ¤” */
select:open {
  box-shadow: 0 0 20px lightgray;
}

.label {
  font-weight: 700;
  display: inline-block;
  width: 100%;
  margin-bottom: 0.25rem;
}

span {
  font-size: 0.9rem;
}

button {
  display: grid;
}

::picker-icon {
  display: none;
}

@media (width <= 550px) {
  .option-container {
    width: 90vw;
    grid-template-rows: 1fr;
    grid-auto-flow: column;
  }
  
  option {
    width: 120px;
  }
}
</style>
